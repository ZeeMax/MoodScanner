<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/image_bg"
                tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView_moodScanner_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/application_title"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#ffebfde7"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/textview_pressHold_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_hold"
        android:layout_below="@+id/textView_moodScanner_Id"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="#ffebfde7"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:layout_below="@+id/textview_pressHold_Id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/finger_bg" />

    <ImageView
        android:id="@+id/imageView_animation_Id"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:layout_below="@+id/textview_pressHold_Id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/thumb_finger_prints"
       />

    <TextView
        android:id="@+id/textView_result_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mood"
        android:layout_below="@+id/imageView_animation_Id"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffebfde7"
        android:padding="15dp"
        android:textStyle="italic|bold"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/mood_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_below="@+id/imageView_animation_Id"
        android:layout_centerHorizontal="true"
        android:textColor="#FDEAB4"
        android:padding="15dp"
        android:layout_marginTop="45dp"
        android:textStyle="italic|bold"
        android:textSize="15sp"/>


</RelativeLayout>
